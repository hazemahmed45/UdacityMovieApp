<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_trailer_selector"
        tools:context="com.example.hazem.udacitymovieapp.Features.favorites.FavoritesScreen">
        <ImageView
            android:id="@+id/iv_favorite_poster"
            android:layout_width="@dimen/item_favorite_width"
            android:layout_height="@dimen/item_favorite_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/defult_16"
            android:layout_marginLeft="@dimen/defult_16"
            android:layout_marginBottom="@dimen/defult_16"/>
        <TextView
            android:id="@+id/tv_favorite_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_favorite_poster"
            app:layout_constraintTop_toTopOf="@+id/iv_favorite_poster"
            tools:text="Robot"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_marginLeft="@dimen/defult_32"/>
        <TextView
            android:id="@+id/tv_favorite_tag"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_favorite_title"
            app:layout_constraintLeft_toLeftOf="@id/tv_favorite_title"
            tools:text="tag"
            android:layout_marginTop="@dimen/defult_4"
            />
        <TextView
            android:id="@+id/tv_favorite_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_favorite_tag"
            app:layout_constraintLeft_toLeftOf="@id/tv_favorite_tag"
            tools:text="2015"
            android:layout_marginTop="@dimen/defult_4"/>
        <TextView
            android:id="@+id/tv_favorite_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_favorite_date"
            app:layout_constraintLeft_toLeftOf="@id/tv_favorite_date"
            tools:text="4.5/10"
            android:layout_marginTop="@dimen/defult_4"/>
        <ImageView
            android:id="@+id/iv_favorite_heart"
            android:layout_width="@dimen/defult_32"
            android:layout_height="@dimen/defult_32"
            android:background="@drawable/favorite_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/defult_16"
            android:layout_marginRight="@dimen/defult_16"/>
    </android.support.constraint.ConstraintLayout>
</layout>