<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_trailer_selector">
        <ImageView
            android:id="@+id/iv_play_symble"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/defult_16"
            android:layout_marginLeft="@dimen/defult_32"
            android:layout_marginBottom="@dimen/defult_16"
            android:src="@android:drawable/ic_media_play"/>
        <TextView
            android:id="@+id/tv_trailer_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_play_symble"
            app:layout_constraintTop_toTopOf="@id/iv_play_symble"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Trailer 1"
            android:textAppearance="?android:textAppearanceMedium"

            app:layout_constraintHorizontal_bias="0.2"/>
        <TextView
            android:id="@+id/tv_trailer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_trailer_name"
            app:layout_constraintLeft_toLeftOf="@+id/tv_trailer_name"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Teaser"
            android:layout_marginBottom="@dimen/defult_16"
            android:textAppearance="?android:textAppearanceSmall"/>
    </android.support.constraint.ConstraintLayout>

</layout>